<tr>
  <% speaker = data.program.speakers.select {|spk| training.speaker == spk.ident}[0] %>
  <td>
    <%= image_tag "speakers/#{speaker.image}", class: "spkPic2"%>
  </td>
  <td class="abstract">
      <h4>
        <%= training.title %>
      </h4>
      <h5>
        <%= training.focus %>, By <%= link_to speaker.name, "http://www.twitter.com/#{speaker.twitter}" %>
      </h5>
      <p>
        <%= training.abstract %>
      </p>
  </td>
</tr>
<tr>
  <td colspan="2">
    <hr />
  </td>
</tr>
