<!doctype html>

<% sponsors = data.sponsors
path = ""
year = "2018"
prospectus = "/images/sponsors/18_RustConf_Prospectus.pdf"
if current_page.path.include? "2016"
  sponsors = data.sponsors2016
  path = "/2016"
  year = "2016"
  prospectus = "/2016/images/sponsors/16_RustConf_Prospectus.pdf"
elsif current_page.path.include? "2017"
  sponsors = data.sponsors2017
  path = "/2017"
  year = "2017"
  prospectus = "/2017/images/sponsors/17_RustConf_Prospectus.pdf"
end
%>

<html>
  <head>
    <meta charset="utf-8">

  <link href='https://fonts.googleapis.com/css?family=Lato:300,300italic,900' rel='stylesheet' type='text/css'>

    <script src="https://maps.googleapis.com/maps/api/js"></script>

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "RustConf" %></title>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all", "retina" %>
    <%= favicon_tag 'images/favicon.png' %>

  </head>

  <body class="center <%= page_classes %>">

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>

    <header>
     <div id="hero">
       <a href="index.html"><img id="logo" src="images/rustconf-hero.png"></a>
     </div>
    </header>

    <main>

      <nav class="one">

        <div class="bk l">
          <div class="arrow top"></div>
          <div class="arrow bottom"></div>
        </div>

        <div class="skew l"></div>
        <div class="main2">
          <div>
            <ul class="menu">
              <li><a href="<%= path %>/program.html">PROGRAM</a></li>
              <li>|</li>
              <li><a href="<%= path %>/schedule.html">SCHEDULE</a></li>
              <li>|</li>
              <li><a href="<%= path %>/training.html">TRAINING</a></li>
              <li>|</li>
              <li><a href="<%= path %>/about.html">ABOUT</a></li>
              <li>|</li>
              <li><a href="<%= path %>/register.html">REGISTER</a></li>
              <li>|</li>
              <li><a href="<%= path %>/sponsors.html">SPONSORS</a></li>
            </ul>
          </div>
        </div>
        <div class="skew r"></div>

        <div class="bk r">
          <div class="arrow top"></div>
          <div class="arrow bottom"></div>
        </div>
      </nav>
  

      <%= yield %>
    </main>

  </body>


  <footer class="center">

<div id="sponsor-footer-container">

  <hr>
  <h2>Thank You to Our Generous <%= year %> Sponsors</h2>

  <div id="footer-ribbon" class="aside ribbon">
    Gold
  </div>

  <div id="sponsor-list" class="center">

    <ul class="premier">
      <% sponsors.select {|sp| sp.type == "gold"}.each_with_index do |sponsor, idx| %>
        <% if idx % 2 == 0 && idx != 0 %>
          <br />
        <% end %>
        <li><a href="<%= sponsor.website %>"><img src="<%= path %>/images/sponsors/<%= sponsor.logo %>" alt="<%= sponsor.name %>"></a></li>

      <% end %>
    </ul>

    <% if sponsors.select {|sp| sp.type == "silver"}.count > 0 %>
    <div id="footer-ribbon" class="aside ribbon">
      Silver
    </div>

    <ul class="supporting">
      <% sponsors.select {|sp| sp.type == "silver"}.each_with_index do |sponsor, idx| %>
        <% if idx % 2 == 0 && idx != 0 %>
          <br />
        <% end %>
        <li><a href="<%= sponsor.website %>"><img src="<%= path %>/images/sponsors/<%= sponsor.logo %>" alt="<%= sponsor.name %>"></a></li>

      <% end %>
    </ul>

    <% end %>
    <h4>Seeking exposure to top Rust Talent? <a href="<%= prospectus %>">Sponsor RustConf</a>!</h4>

  </div>
</div>


  <hr />

    <ul>
      <li><a href="<%= path %>/about.html#conduct">Code of Conduct</a></li>
      <li>|</li>
      <li><a href="mailto:events@tilde.io">Get in Touch</a></li>
      <li>|</li>
      <li><a href="<%= path %>/sponsors.html">Sponsors</a></li>
      <li>|</li>
      <li><a href="http://www.tilde.io">&#169; Tilde Inc. 2017</a></li>
      <br><br>
      <li>Previous years:</li>
      <li><a href="/2017">RustConf 2017</a></li>
      <li>|</li>
      <li><a href="/2016">RustConf 2016</a></li>
    </ul>
  </footer>

</html>
